<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:ems="10"
            android:inputType="textLongMessage|textMultiLine|textImeMultiLine"
            android:text='{ [{ "Tehran in Iran"}, {true}, { true}, {red}], [{ "Tehran in Iran"}, {true}, { true}, {red}]
            ,[{ "Tehran in Iran"}, {true}, { true}, {red}],[{ "Tehran in Iran"}, {true}, { true}, {red}]} , {100}' />

        <Button
            android:id="@+id/button_build"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="60sp"
            android:layout_marginRight="50sp"
            android:text="Build" />
    </LinearLayout>
</FrameLayout>